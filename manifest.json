{
	"name": "WISYChrome",
	"manifest_version": 2,
	"version": "1",

	"description": "A WISYWIG point and click CSS generator for Chrome", 

	"icons": {
		"16": "img/waFavicon.png",
		"22": "img/waFavicon.png",
		"24": "img/waFavicon.png",
		"32": "img/waFavicon.png",
		"48": "img/waFavicon.png"
	},

	"options_page": "option.html",
	"background": { "page":"background.html" },

	"browser_action": {
		"default_icon": "img/waFavicon.png",
		"default_title": "Colours and Smiles"
	},

	"web_accessible_resources": [
		"img/header.png",
		"img/body.png",
		"img/list.png",
		"img/footer.png",
		"img/bullet.png"
	],

	"permissions": [
		"tabs",
		"http://*/*", 
		"https://*/*",
		"contextMenus"
	] 
}
